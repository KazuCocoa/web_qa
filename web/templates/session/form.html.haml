- form_for @changeset, @action, [method: :post], fn f ->
  - if f.errors != [] do
    .alert.alert-danger
      %p Oops, something went wrong! Please check the errors below:
      %ul
        - for {attr, message} <- f.errors do
          %li= humanize(attr)
            = translate_error(message)
  .form-group
    %label Email
    = email_input f, :email, [class: "form-control", placeholder: "email@example.com"]
  .form-group
    %label Password
    = password_input :user, :password, class: "form-control"
  .form-group
    = submit "Submit", class: "btn btn-primary"
